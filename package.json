{
	"name": "server",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"client": "cd ./client && yarn start",
		"server": "cd ./bin && nodemon www",
		"start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
		"heroku-postbuild": "cd client && npm install && npm run build"
	},
	"dependencies": {
		"concurrently": "^5.3.0",
		"cookie-parser": "~1.4.4",
		"cors": "^2.8.5",
		"debug": "~2.6.9",
		"dotenv": "^8.2.0",
		"express": "~4.16.1",
		"http-errors": "~1.6.3",
		"jade": "~1.11.0",
		"morgan": "~1.9.1",
		"nodemailer": "^6.4.17",
		"nodemon": "^2.0.7"
	}
}
